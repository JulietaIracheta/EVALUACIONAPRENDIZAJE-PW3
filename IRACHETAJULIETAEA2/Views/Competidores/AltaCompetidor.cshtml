@model Entidades.Views.VMCompetidores
@{
    ViewBag.Title = "AltaCompetidor";
}

<center><h2><i>Alta competidor</i></h2></center>
<br />

@using (Html.BeginForm("AltaCompetidor", "Competidores", FormMethod.Post, new { @class = "login100-form validate-form p-b-33 p-t-5" }))
{
    <center>
        <i><b>Nombre del competidor:</b></i><br />
        <div class="wrap-input100 validate-input">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div><br>

        <button type="submit" class="btn btn-primary">Dar de alta</button>
    </center>

}

